h1 skills
each default_ability, skill in {'acrobatics':'dexterity','alchemy':'intelligence','animal_handling':'wisdom','athletics':'strength','awareness':'wisdom','charm':'charisma','craft':'intelligence','deception':'charisma','insight':'wisdom','intimidation':'charisma','investigation':'intelligence','lore':'intelligence','medicine':'wisdom','navigation':'wisdom','operate':'wisdom','performance':'charisma','religion':'wisdom','repair':'intelligence','sleight_of_hand':'dexterity','stealth':'dexterity','survival':'wisdom','tech':'intelligence','withstand':'constitution'}
    .grid.display
        button.pictos.settings-button(name=`act_toggle_${skill}` title=`${skill} settings` type='action') y
        button.h2(name=`roll_${skill.toUpperCase()}` type='roll' value=`@{whispertype} &{template:rolls} {{limit_height=@{roll_limit_height}}} {{charactername=@{character_name}}} {{header=^{${skill}}}} {{subheader=^{skill}}} {{roll01=[[1d20cs20cf1 + [@{${skill}_proficiency_display}] (@{${skill}})[@{text_modifier}] + (@{query_roll_bonus})[@{text_bonus}]]]}} {{roll01_type=skill}} {{notes_show=@{roll_show_notes}}} {{notes=@{${skill}_notes}}}`) #{skill}
        .circle
            span(name=`attr_${skill}` title=`@{${skill}}`)
        span.symbol =
        label.sublabel(title=`${skill} ability modifier`)
            span.sublabel.darkred mod
            span(name=`attr_${skill}_ability` title=`@{${skill} ability}`)
        label.sublabel(title=`${skill} proficiency`)
            span.sublabel.darkred prof
            span
                span.inline(name=`attr_${skill}_proficiency_display`)
                span.inline(name=`attr_${skill}_proficiency` title=`@{${skill}_proficiency}`)
        label.sublabel(title=`${skill} item`)
            span.sublabel.darkred item
            span(name=`attr_${skill}_item` title=`@{${skill}_item}`)
        label.sublabel( title=`${skill} temporary`)
            span.sublabel.darkred temp
            span(name=`attr_${skill}_temporary` title=`@{${skill}_temporary}`)
        if (skill === 'acrobatics' || skill === 'athletics' || skill === 'sleight_of_hand' || skill === 'stealth')
            label.sublabel(title=`${skill} armor pentalty`)
                span.sublabel.darkred() armor
                span(name=`attr_${skill}_armor` title=`@{${skill}_armor}`)
    .grid.settings(class=`${skill}-settings`)
        .ability-select
            +ability_select(skill,default_ability)
            label(title=`${skill} ability input`)
                input( name=`attr_${skill}_ability` placeholder='0' spellcheck='false' title=`@{${skill}_ability}` type='text' value='')
        label(title=`${skill} rank select`)
            span.sublabel.darkred rank
            +rank_select(skill)
        label(title=`${skill} item`)
            span.sublabel.darkred item
            input(name=`attr_${skill}_item` placeholder='0' spellcheck='false' title=`@{${skill}_item}` type='text' value='')
        label.sublabel(title=`${skill} temporary`)
            span.sublabel.darkred temp
            input(name=`attr_${skill}_temporary` placeholder='0' spellcheck='false' title=`@{${skill}_temporary}` type='text' value='')
        if (skill === 'acrobatics' || skill === 'athletics' || skill === 'sleight_of_hand' || skill === 'stealth')
            label.sublabel(title=`${skill} armor pentalty`)
                span.sublabel.darkred armor
                input(name=`attr_${skill}_armor` placeholder='0' spellcheck='false' title=`@{${skill}_armor}` type='text' value='')
        label(title=`${skill} notes`)
            span()
            textarea(name=`attr_${skill}_notes` placeholder='notes' spellcheck='false' title=`@{${skill}_notes}` value='')